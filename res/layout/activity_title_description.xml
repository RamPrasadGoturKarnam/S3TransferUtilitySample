<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.amazonaws.demo.s3transferutility.TitleDescriptionActivity">

    <TextView
        android:id="@+id/simpleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:text="Before Clicking"
        android:textColor="#00bfff"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/simpleTitleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:text="title"
        android:textColor="#f00"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="37dp"
        android:layout_below="@+id/simpleTextView" />

    <TextView
        android:id="@+id/simpleDescriptionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:text="decription"
        android:textColor="#f00"
        android:textSize="12sp"
        android:textStyle="italic"
        android:layout_below="@+id/simpleTextView"
        android:layout_alignLeft="@+id/simpleTitleView"
        android:layout_marginTop="70dp" />

</RelativeLayout>
